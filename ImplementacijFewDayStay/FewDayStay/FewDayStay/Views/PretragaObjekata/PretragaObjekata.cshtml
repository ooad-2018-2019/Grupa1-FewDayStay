<div class="clearfix">
    <div class="row well-sm">
        <div class="float-right col-xs-8">
            <div>
                <!--"i" najcesce znaci da ce biti nesto napisano koristeci italics-->
                <i class="fa fa-search position-absolute pt-2 pl-3"></i>
                <input type="text" class="form-control pl-5" id="search" placeholder="Search">
            </div>
        </div>

        <div class="dropdown col-xs-4">
            <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                Filetri za pretragu
                <span class="caret">
                </span>
            </button>

            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                <li><a href="#">po imenu apartmana</a></li>
                <li><a href="#">po lokaciji</a></li>
                <li><a href="#">po cijeni</a></li>
                <li><a href="#">po vlasniku</a></li>
                <li role="separator" class="divider"></li>
                <li><a href="#">Obriši do sada iskorištene filtere</a></li>
            </ul>
        </div>

    </div>

    @{
        List<Objekat> sviObjekti = new List<Objekat>();
        /*sviObjekti.Add(new Stan(1, 4, "Hen apartments", 75, 45, 5.0, 1, 1));
        sviObjekti.Add(new Stan(2, 5, "Mujo airbnb", 150, 75, 4.8, 2, 2));
        sviObjekti.Add(new Stan(3, 6, "Nadija ", 250, 100, 4.9, 3, 3));
        sviObjekti.Add(new Stan(4, 7, "Džasnim i Hakalo aprtemnts", 15, 25, 1.3, 4, 4));
        sviObjekti.Add(new Stan(4, 7, "Ehli", 15, 25, 1.3, 4, 4));
        sviObjekti.Add(new Stan(4, 7, "Dzeni nedostajes mi ceznjo", 15, 25, 1.3, 4, 4));
        sviObjekti.Add(new Stan(4, 7, "Toni lupas ko lav", 15, 25, 1.3, 4, 4));*/

        //ovdje se dodaje filtriranje dobavljenih podatak iz baze, a i samo dobavlajnje iz baze
    }

    <div class="row">
        <div class="col-xs-10">
            <div class="panel panel-default w-100 dodajMarginuSaSvihStrana">
                <!-- Default panel contents -->
                <div class="panel-heading">Filtrirani objekti</div>

                <!-- Table -->
                <table class="dodajMarginuSaSvihStrana">
                    <!--table row-->
                    <tr class="panel panel-success w-100">
                        <!--table header-->
                        <th>ObjekatID </th>
                        <th>Broj kreveta </th>
                        <th>Naziv </th>
                        <th>Kvadratura </th>
                        <th>Cijena po noci </th>
                        <th>Ocjena </th>
                        <th>VlasnikID </th>
                        <th>LokacijaID </th>
                    </tr>

                    @foreach (var objekat in sviObjekti)
                    {
                        <tr class="w-100">
                            <!--"td" predstavlja jednu celiju u tabeli-->
                            <td class="brojUTabeli">@objekat.ObjekatID</td>
                            <td class="brojUTabeli"> @objekat.BrojKreveta</td>
                            <td class="nazivUTabeli">@objekat.Naziv</td>
                            <td class="brojUTabeli">@objekat.Kvadratura</td>
                            <td class="brojUTabeli">@objekat.CijenaPoNoci</td>
                            <td class="brojUTabeli">@objekat.Ocjena</td>
                            <td class="brojUTabeli">@objekat.VlasnikID</td>
                            <td class="brojUTabeli">@objekat.LokacijaID</td>
                            <td>
                                @{
                                    var json = Newtonsoft.Json.JsonConvert.SerializeObject(objekat);
                                }
                                <div class="row well-sm">
                                    <div class="col-xs-12">
                                        <!-- "onclick=IME_FUNKCIJE_KOJA_SE_POZIVA" koja je implementirana u "script" tagu -->
                                        <button type="button" class="btn btn-info dodajMarginuSaSvihStrana" data-toggle="modal" data-target="#modalZaObjekte" onclick="prikaziDetaljeOObjektu()">Pogledaj detaljnije</button>
                                    </div>
                                </div>

                                <script>
                                    function prikaziUnesenePodatke() {
                                        $(@objekat.Naziv).html($("#nazivObjekta").val());
                                        $(@objekat.BrojKreveta).html($("#brojKrevetaObjekta").val());
                                        $(@objekat.Kvadratura).html($("#kvadraturaObjekta").val());
                                        $(@objekat.Ocjena).html($("#ocjenaObjekta").val());
                                        $(@objekat.VlasnikID).html($("#vlasnikObjekta").val());
                                        $(@objekat.LokacijaID).html($("#lokacijaObjekta").val());
                                    }
                                </script>

                            </td>
                        </tr>
                    }

                </table>
            </div>

        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="modalZaObjekte" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Detalji o objektu</h4>
                </div>

                <div class="modal-body">

                    <div class="row well-sm">
                        <div class="col-xs-4">
                            <label>Naziv objekta </label>
                        </div>
                        <div id="nazivObjekta" class="col-xs-8"></div>
                    </div>

                    <div class="row well-sm">
                        <div class="col-xs-4">
                            <label>Broj kreveta </label>
                        </div>
                        <div id="brojKrevetaObjekta" class="col-xs-8"></div>
                    </div>

                    <div class="row well-sm">
                        <div class="col-xs-4">
                            <label>Kvadratura </label>
                        </div>

                        <div id="kvadraturaObjekta" class="col-xs-8"></div>
                    </div>

                    <div class="row well-sm">
                        <div class="col-xs-4">
                            <label>Ocjena </label>
                        </div>

                        <div id="ocjenaObjekta" class="col-xs-8"></div>
                    </div>

                    <div class="row well-sm">
                        <div class="col-xs-4">
                            <label>Vlasnik </label>
                        </div>

                        <div id="vlasnikObjekta" class="col-xs-8"></div>
                    </div>

                    <div class="row well-sm">
                        <div class="col-xs-4">
                            <label>Lokacija </label>
                        </div>

                        <div id="lokacijaObjekta" class="col-xs-8"></div>
                    </div>

                    <!-- kroz ono gore slanje informacija se sigurno moze nekako poslati i da se slike ovdje prikazu-->
                    <div class="slider-holder">
                        <span id="slider-image-1"></span>
                        <span id="slider-image-2"></span>
                        <span id="slider-image-3"></span>
                        <div class="image-holder">
                            <img src="~/images/logo.png" class="slider-image" />
                            <img src="~/images/banner1.svg" class="slider-image" />
                            <img src="~/images/banner2.svg" class="slider-image" />
                        </div>

                        <div class="button-holder">
                            <a href="#slider-image-1" class="slider-change"></a>
                            <a href="#slider-image-2" class="slider-change"></a>
                            <a href="#slider-image-3" class="slider-change"></a>
                        </div>
                    </div>

                </div>

                <div class="modal-footer">
                    <div class="row well-sm">
                        <div class="col-xs-2 col-sm-offset-8">
                            <button type="button" class="btn btn-info" data-dismiss="modal">Zatvori</button>
                        </div>

                        <div class="col-xs-2">
                            <button type="button" class="btn btn-success">Iznajmi</button>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>

</div>
